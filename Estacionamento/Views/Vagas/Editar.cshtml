@model Estacionamento.Models.Vaga

@{
    ViewData["Title"] = "Editar Vaga";
}

<div class="text-center mb-4">
    <h2 class="display-6">Editar Vaga</h2>
</div>

<form asp-action="Alterar"
      asp-controller="Vagas"
      asp-route-id="@Model.Id"
      method="post"
      class="needs-validation"
      novalidate>

    <input type="hidden" asp-for="Id" />

    <div class="row justify-content-center">
        <div class="col-md-6 mb-3">
            <label asp-for="CodigoLocalizacao" class="form-label">Código de Localização</label>
            <input asp-for="CodigoLocalizacao" class="form-control" required />
            <div class="invalid-feedback">Informe o código de localização da vaga.</div>
            <span asp-validation-for="CodigoLocalizacao" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Ocupada" class="form-label">Está Ocupada?</label>
            <select asp-for="Ocupada" class="form-select" required>
                <option value="false" selected="@(Model.Ocupada == false)">Não</option>
                <option value="true" selected="@(Model.Ocupada == true)">Sim</option>
            </select>
            <div class="invalid-feedback">Selecione o status da vaga.</div>
            <span asp-validation-for="Ocupada" class="text-danger"></span>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success">Salvar Alterações</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Validação Bootstrap
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                const forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
