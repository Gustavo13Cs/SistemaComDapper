@using Estacionamento.Models
@model IEnumerable<Vaga>
@{
    ViewData["Title"] = "Vagas";
}

<div class="text-center">
    <h1 class="display-4 fw-bold">Vagas</h1>
     <a class="btn btn-primary btn-novo" asp-area="" asp-controller="Vagas" asp-action="Novo">Novo</a></li>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>CodigoLocalizacao</th>
                <th>Ocupada</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model) {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CodigoLocalizacao</td>
                    <td>@(item.Ocupada ? "Sim" : "NÃ£o")</td>
                    <td>
                        <form onsubmit="return confirm('Confirma?')" asp-route-id="@item.Id" asp-action="Apagar" asp-controller="Vagas" method="post">
                            <input type="hidden" name="id" value="">
                             <button type="submit" class="btn btn-danger">Excluir</button>
                        </form>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Editar" asp-controller="Vagas">Alterar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
