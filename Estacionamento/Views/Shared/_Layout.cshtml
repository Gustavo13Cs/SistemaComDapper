<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Estacionamento</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ui.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home/home.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body style="background-color: #1f1f2e; color: #f0f0f0;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
            <a class="navbar-brand fw-bold text-info" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door-fill"></i> Estacionamento
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Clientes" asp-action="Index"><i class="bi bi-person-fill"></i> Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Tickets" asp-action="Index"><i class="bi bi-receipt"></i> Tickets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Vagas" asp-action="Index"><i class="bi bi-signpost"></i> Vagas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ValorDoMinuto" asp-action="Index"><i class="bi bi-currency-dollar"></i> Valor do Minuto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Veiculos" asp-action="Index"><i class="bi bi-car-front"></i> Veículos</a>
                    </li>
                    <li class="nav-item"></li>
                        <a class="nav-link" asp-controller="HistoricoVagas" asp-action="Index"><i class="bi bi-signpost"></i> Historico</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-graph-up"></i> Dashboard
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <button id="botToggle" class="btn btn-info rounded-circle shadow" style="position: fixed; bottom: 25px; right: 25px; width: 60px; height: 60px; z-index: 1000;"></button>
     🤖
    </button>

    <div id="chatBotBox" class="card shadow-lg" style="position: fixed; bottom: 100px; right: 25px; width: 300px; display: none; z-index: 1000;">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <span>Assistente do Sistema</span>
        <button class="btn btn-sm btn-light" onclick="toggleBot()">✖</button>
    </div>
    <div class="card-body" id="chatLog" style="height: 250px; overflow-y: auto; font-size: 0.9rem;">
        <div class="mb-3">
            <div class="d-flex flex-wrap gap-2 justify-content-center">
                <button type="button" class="btn btn-sm btn-outline-light text-white bg-dark border-info" onclick="enviarAtalho('Quantas vagas disponíveis?')">📍 Vagas disponíveis</button>
                <button type="button" class="btn btn-sm btn-outline-light text-white bg-dark border-warning" onclick="enviarAtalho('Quantos tickets ativos?')">🎫 Tickets ativos</button>
                <button type="button" class="btn btn-sm btn-outline-light text-white bg-dark border-success" onclick="enviarAtalho('Qual a tarifa atual?')">💰 Tarifa atual</button>
                <button type="button" class="btn btn-sm btn-outline-light text-white bg-dark border-primary" onclick="enviarAtalho('Qual a receita de hoje?')">📈 Receita do dia</button>
            </div>
      </div>
    </div>
    <div class="card-footer p-2">
            <form id="chatForm" onsubmit="return enviarPergunta()">
                <div class="input-group">
                    <input type="text" id="userInput" class="form-control" placeholder="Digite sua pergunta..." required />
                    <button type="submit" class="btn btn-info">▶</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/js/chatbot.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
