@model IEnumerable<Estacionamento.Models.HistoricoVagas>

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 text-info fw-bold">Histórico de Vagas</h1>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Cliente</th>
                    <th>Vaga</th>
                    <th>Veículo</th>
                    <th>Ticket</th>
                    <th>Entrada</th>
                    <th>Saída</th>
                    <th>Tempo Total</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Veiculo.Cliente.Nome</td>
                        <td>@item.VagaId</td>
                        <td>@item.VeiculoId</td>
                        <td>@item.NumeroTicket</td>
                        <td>@item.DataEntrada.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.DataSaida.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @{
                                var horas = item.TempoTotalMinutos / 60;
                                var minutos = item.TempoTotalMinutos % 60;
                            }
                            @horas h @minutos min
                        </td>
                        <td>R$ @item.ValorCobrado.ToString("F2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
