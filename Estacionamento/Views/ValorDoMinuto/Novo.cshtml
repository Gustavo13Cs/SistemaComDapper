@model Estacionamento.Models.ValorDoMinuto

@{
    ViewData["Title"] = "Novo Valor por Minuto";
}

<h2>@ViewData["Title"]</h2>

<div class="text-center">
   <h1 class="text-center">Novo Valor</h1>
</div>

<form asp-action="Criar" asp-controller="ValorDoMinuto"  method="post" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Minutos" class="form-label"></label>
            <input asp-for="Minutos" type="number" class="form-control" required />
            <div class="invalid-feedback">
                Informe a quantidade de minutos.
            </div>
            <span asp-validation-for="Minutos" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Valor" class="form-label"></label>
            <input asp-for="Valor" type="text" class="form-control" required />
            <div class="invalid-feedback">
                Informe o valor cobrado.
            </div>
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Ativa classes de validação Bootstrap após tentativa de envio
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                const forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, form => {
                    form.addEventListener('submit', event => {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
