@model Estacionamento.Models.Tarifas

@{
    ViewData["Title"] = "Nova Tarifa";
    var tiposTarifa = new List<string> { "Normal", "Especial" };
    var dias = new List<(int? valor, string nome)>
{
(null, "Todos"),
(0, "Domingo"),
(1, "Segunda"),
(2, "Terça"),
(3, "Quarta"),
(4, "Quinta"),
(5, "Sexta"),
(6, "Sábado")
};
}


<h2>Nova Tarifa</h2>


<form asp-action="Criar" method="post">
    <div class="form-group">
        <label asp-for="TipoTarifa"></label>
        <select asp-for="TipoTarifa" class="form-control">
            @foreach (var tipo in tiposTarifa)
            {
                <option value="@tipo">@tipo</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="HoraInicio"></label>
        <input asp-for="HoraInicio" class="form-control" type="time" />
    </div>

    <div class="form-group">
        <label asp-for="HoraFim"></label>
        <input asp-for="HoraFim" class="form-control" type="time" />
    </div>

    <div class="form-group">
        <label asp-for="Valor"></label>
        <input asp-for="Valor" class="form-control" type="text" inputmode="decimal" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiaSemana"></label>
        <select asp-for="DiaSemana" class="form-control">
            @foreach (var dia in dias)
            {
                <option value="@dia.valor">@dia.nome</option>
            }
        </select>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>