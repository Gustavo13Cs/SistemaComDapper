@model Estacionamento.DTO.TicketDTO
@{
    ViewData["Title"] = "Cadastro de Cliente e Veículo";
}

<h2>Cadastro de Cliente e Veículo</h2>

<form asp-action="Criar" asp-controller="Tickets" method="post">
    <div class="form-group">
        <label for="Id">Cliente</label>
        <select asp-for="Id" asp-items="ViewBag.Clientes" class="form-control">
            <option value="">-- Selecione um cliente --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Cpf">CPF do Cliente</label>
        <input asp-for="Cpf" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Placa">Placa do Veículo</label>
        <input asp-for="Placa" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Modelo">Modelo do Veículo</label>
        <input asp-for="Modelo" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Marca">Marca do Veículo</label>
        <input asp-for="Marca" class="form-control" />
    </div>

    <div class="form-group">
        <label for="VagaId">Vaga</label>
        <select asp-for="VagaId" asp-items="ViewBag.Vaga" class="form-control">
            <option value="">[Selecione uma Vaga]</option>
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
