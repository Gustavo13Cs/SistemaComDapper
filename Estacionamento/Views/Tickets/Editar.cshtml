@model Estacionamento.Models.Ticket

@{
    ViewData["Title"] = "Editar Ticket";
}

<div class="text-center mb-4">
    <h2 class="display-6">Editar Ticket</h2>
</div>

<form asp-action="Alterar" asp-controller="Tickets" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="row justify-content-center">
        <div class="col-md-6 mb-3">
            <label asp-for="DataEntrada" class="form-label">Data de Entrada</label>
            <input asp-for="DataEntrada" class="form-control" type="datetime-local" required />
            <div class="invalid-feedback">Informe a data de entrada.</div>
            <span asp-validation-for="DataEntrada" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="DataSaida" class="form-label">Data de Saída</label>
            <input asp-for="DataSaida" class="form-control" type="datetime-local" />
            <span asp-validation-for="DataSaida" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Valor" class="form-label">Valor</label>
            <input asp-for="Valor" class="form-control" type="number" step="0.01" required />
            <div class="invalid-feedback">Informe o valor do ticket.</div>
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="VeiculoId" class="form-label">Veículo</label>
            <input asp-for="VeiculoId" class="form-control" type="number" required />
            <div class="invalid-feedback">Informe o ID do veículo.</div>
            <span asp-validation-for="VeiculoId" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="VagaId" class="form-label">Vaga</label>
            <input asp-for="VagaId" class="form-control" type="number" required />
            <div class="invalid-feedback">Informe o ID da vaga.</div>
            <span asp-validation-for="VagaId" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="ValoresId" class="form-label">Valor por Minuto (ID)</label>
            <input asp-for="ValoresId" class="form-control" type="number" />
            <span asp-validation-for="ValoresId" class="text-danger"></span>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success">Salvar Alterações</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                const forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, form => {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
