@model Estacionamento.Models.Usuario
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Registrar - Sistema de Estacionamento</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/registrar.css" rel="stylesheet" />
</head>
<body>
    <div class="register-card">
        <h2>Criar Conta</h2>

        @if (TempData["Erro"] != null)
        {
            <div class="alert alert-danger">@TempData["Erro"]</div>
        }

        <form asp-action="Registrar" method="post">
            <div class="mb-3 text-start">
                <label class="form-label">Nome Completo</label>
                <input asp-for="NomeCompleto" class="form-control" required placeholder="Digite seu nome completo" />
            </div>
            <div class="mb-3 text-start">
                <label class="form-label">E-mail</label>
                <input asp-for="Email" type="email" class="form-control" required placeholder="Digite seu e-mail" />
            </div>
            <div class="mb-3 text-start">
                <label class="form-label">Senha</label>
                <input asp-for="SenhaHash" type="password" class="form-control" required placeholder="Crie uma senha" />
            </div>
            <div class="mb-3 text-start">
                <label class="form-label">Perfil</label>
                <select asp-for="Perfil" class="form-select" required>
                    <option value="Cliente">Cliente</option>
                    <option value="Funcionario">Funcionário</option>
                    <option value="Admin">Administrador</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success w-100 py-2">Registrar</button>
        </form>

        <a asp-action="Login" class="login-link">Já tem conta? Faça login</a>
    </div>
</body>
</html>
