@{
    Layout = "_Layout";
    ViewData["Title"] = "Registrar Usuário";
}

<div class="container login-container">
    <div class="card login-card" style="max-width: 500px;">
        <h2 class="text-center text-success mb-5 fw-bold">
            <i class="bi bi-person-plus-fill me-2"></i>Criar Nova Conta
        </h2>

        @if (TempData["Erro"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["Erro"]</div>
        }

        <form method="post" action="/conta/registrar">
            <div class="mb-3">
                <label for="nome" class="form-label fw-semibold">Nome Completo</label>
                <input type="text" id="nome" name="NomeCompleto" class="form-control" placeholder="Digite seu nome completo" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label fw-semibold">E-mail</label>
                <input type="email" id="email" name="Email" class="form-control" placeholder="seu.email@exemplo.com" required>
            </div>

            <div class="mb-3">
                <label for="senha" class="form-label fw-semibold">Senha</label>
                <input type="password" id="senha" name="SenhaHash" class="form-control" placeholder="Crie uma senha segura" required>
            </div>

            <div class="mb-4">
                <label for="perfil" class="form-label fw-semibold">Perfil de Acesso</label>
                <select id="perfil" name="Perfil" class="form-select">
                    <option value="Cliente">Cliente</option>
                    <option value="Funcionario">Funcionário</option>
                    <option value="Admin">Administrador</option>
                </select>
            </div>

            <div class="d-grid mb-4">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-check-circle me-1"></i> REGISTRAR
                </button>
            </div>

            <div class="text-center">
                <small class="text-secondary">Já tem uma conta?</small><br>
                <a href="/conta/login" class="fw-semibold mt-1">Voltar para o login</a>
            </div>
        </form>
    </div>
</div>