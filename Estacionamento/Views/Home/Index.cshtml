@{
    ViewData["Title"] = "Painel - Sistema de Estacionamento";
}

<div class="container py-5 d-flex flex-column align-items-center">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Sistema de Estacionamento</h1>
        <p class="lead text-light">Bem-vindo! Escolha uma das seções abaixo para gerenciar seu estacionamento.</p>
    </div>
    
    @if (ViewBag.PorcentagemOcupada >= 70)
    {
        <div class="bg-dark border border-warning rounded p-4 text-warning shadow-lg text-center my-3">
            <i class="bi bi-exclamation-triangle-fill fs-3"></i>
            <p class="mb-0 fw-bold mt-2">Atenção! O estacionamento está com 70% de ocupação.</p>
        </div>
    }

    <div class="row g-4 justify-content-center text-center w-100" style="max-width: 900px;">
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card card-dashboard p-4">
                <i class="bi bi-person-fill"></i>
                <h5 class="card-title mt-3">Clientes</h5>
                <a asp-controller="Clientes" asp-action="Index" class="btn btn-outline-light">Acessar</a>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card card-dashboard p-4">
                <i class="bi bi-receipt-cutoff"></i>
                <h5 class="card-title mt-3">Tickets</h5>
                <a asp-controller="Tickets" asp-action="Index" class="btn btn-outline-light">Acessar</a>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card card-dashboard p-4">
                <i class="bi bi-signpost-split-fill"></i>
                <h5 class="card-title mt-3">Vagas</h5>
                <a asp-controller="Vagas" asp-action="Index" class="btn btn-outline-light">Acessar</a>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card card-dashboard p-4">
                <i class="bi bi-currency-dollar"></i>
                <h5 class="card-title mt-3">Tarifas</h5>
                <a asp-controller="Tarifas" asp-action="Index" class="btn btn-outline-light">Acessar</a>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card card-dashboard p-4">
                <i class="bi bi-car-front-fill"></i>
                <h5 class="card-title mt-3">Veículos</h5>
                <a asp-controller="Veiculos" asp-action="Index" class="btn btn-outline-light">Acessar</a>
            </div>
        </div>
        </div>
    </div>
</div>
